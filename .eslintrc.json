{
  "parserOptions": {
    "ecmaVersion": 2018
  },

  "env": {
    "es6": true
  },
  "extends": ["prettier"],
  "rules": {
    "semi": 0,
    "max-len": [
      "error",
      100,
      2,
      {
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ]
  }
}
